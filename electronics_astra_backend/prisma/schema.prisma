datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id @default(cuid())
  name      String?
  email     String   @unique
  role      Role     @default(STUDENT)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  problems    Problem[]    @relation("ProblemCreator")
  submissions Submission[]
}

enum Role {
  ADMIN
  STUDENT
}

model Problem {
  id          String     @id @default(cuid())
  title       String
  slug        String     @unique
  category    String
  difficulty  Difficulty
  description String
  points      Int        @default(100)
  languages   Language[] // e.g. [VERILOG, VHDL]
  tags        String[]   // simple tags array
  diagramUrl  String?
  examples    Json?    // array of examples
  explanation String?
  hints       String[] @default([])
  settings    Json?
  isActive    Boolean    @default(false)
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  createdById String?
  createdBy   User?   @relation("ProblemCreator", fields: [createdById], references: [id])

  files       ProblemFile[]
  submissions Submission[]
}

enum Difficulty {
  BEGINNER
  MEDIUM
  HARD
}

enum Language {
  VERILOG
  VHDL
}

model ProblemFile {
  id        String          @id @default(cuid())
  problemId String
  problem   Problem         @relation(fields: [problemId], references: [id], onDelete: Cascade)

  type      ProblemFileType
  language  Language // now explicitly linked to language enum
  filename  String?  // stored filename (relative path)
  content   String?  // optional store of file content
  createdAt DateTime        @default(now())
  updatedAt DateTime        @updatedAt
}

enum ProblemFileType {
  STUDENT_TEMPLATE
  TESTBENCH
  REFERENCE_SOLUTION
}

model Submission {
  id        String           @id @default(cuid())
  userId    String?
  problemId String
  user      User?            @relation(fields: [userId], references: [id])
  problem   Problem          @relation(fields: [problemId], references: [id])

  code      String // user submitted code
  language  Language // "VERILOG" or "VHDL"
  status    SubmissionStatus @default(PENDING)
  createdAt DateTime         @default(now())
  updatedAt DateTime         @updatedAt

  result SubmissionResult?
}

enum SubmissionStatus {
  PENDING
  RUNNING
  PASSED
  FAILED
  ERROR
}

model SubmissionResult {
  id           String     @id @default(cuid())
  submissionId String     @unique
  submission   Submission @relation(fields: [submissionId], references: [id], onDelete: Cascade)

  totalTests   Int
  passedTests  Int
  failedTests  Int
  log          String  // raw simulator log text
  waveformPath String? // path to wave.vcd
  createdAt    DateTime @default(now())
}
